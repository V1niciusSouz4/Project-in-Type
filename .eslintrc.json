{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "trailingComma": "es5",
              "arrowParens": "avoid",
              "endOfLine": "lf",
              "semi": true,
              "printWidth": 80,
              "tabWidth": 2,
              "singleQuote": true,
              "useTabs": false
            }
          ]
    }
}
